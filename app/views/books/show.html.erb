<div class="page-header">
</div>

<% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
	<div class="row">
	
		<div class="col-xs-3">
			<h2>User Info</h2>

			<%= attachment_image_tag @book_show.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

			<table class="table">
				<tbody>
					<tr>
						<th>name</th>
						<th><%= @book_show.user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @book_show.user.introduction %></th>
					</tr>
				</tbody>
			</table>


			<div class = "row">
			<%= link_to "", edit_user_path(@book_show.user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
			</div>

			<h2>New book</h2>

			<%= form_for(@book) do |f| %>

				<div class="field row">
					<h4>Title</h4>
					<%= f.text_field :title, class: "col-xs-12 book_title" %>
				</div>

				<div class="field row">
					<h4>Opinion</h4>
					<%= f.text_area :body, class: "col-xs-12 book_body"%>
				</div>

				<div class="actions row">
				<br><%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %><br>
				</div>

			<% end %>
		</div>

		<div class="col-xs-9">

			<h2>Books detail</h2>
			<table class="table table-hover table-inverse">


				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
					</tr>
				</thead>

				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@book_show.user) do %>
								<%=  attachment_image_tag @book_show.user, :profile_image, format:"jpeg",fallback:"no_image.jpg", size:"40x40" %>
								<%= @book_show.user.name %>
							<% end %>
						</td>
						<td><%= link_to @book_show.title, book_path(@book_show) %></td>
						<td><%= @book_show.body %></td>

						<% if @book_show.user == current_user %>
						<td><%= link_to "Edit", edit_book_path %></td>
						<td><%= link_to "Destroy", book_path(@book_show), method: :delete, "data-confirm" => "Are you sure?" %></td>
						<% end %>
					</tr>
				</tbody>

			</table>
		</div>
	</div>
</div>





